<div class="flex flex-col border-default box-padding gap-y-4">
  <div class="flex flex-row items-center justify-between">
    <h1 class="heading-5 uppercase">
      <%= name %>
    </h1>
    <%= link_to_external external_url, title: "Monitoring Dashboard" do %>
      <%= render V2::IconComponent.new("integrations/logo_#{provider.to_s}.png", size: :md, rounded: false) %>
    <% end %>
  </div>
  <div class="grid grid-cols-2 divide-x place-content-between">
    <% values.each do |key, val| %>
      <div class="flex flex-col py-1 first:px-0 px-3 gap-y-1">
        <div class="text-xs text-main-400 uppercase"><%= key %></div>
        <div class="flex items-center gap-x-1 <%= text_size %> <%= metric_color(val[:is_healthy]) %>" title="<%= metric_title(val) %>">
          <%= val[:value] %>
          <% if current_user.release_monitoring? && val[:is_healthy] == false %>
            <%= inline_svg "exclamation.svg", classname: "w-5 h-5 text-red-800" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
