<%= form_with(**@params) do |form| %>
  <% set_form(form) %>
  <% if free_form? %>
    <%= content %>
    <% if actions.present? %>
      <div class="flex justify-end mt-6">
        <% actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="grid space-y-10">
      <% sections.each do |section| %>
        <%= section %>
      <% end %>

      <% if advanced_sections.any? %>
        <div class="mt-16">
          <%= render AccordionComponent.new(title: "Advanced Settings") do %>
            <section class="grid space-y-8 mt-10">
              <% advanced_sections.each do |adv_section| %>
                <%= adv_section %>
              <% end %>
            </section>
          <% end %>
        </div>
      <% end %>

      <% if actions.size == 1 %>
        <div class="grid grid-cols-3 items-start xl:space-x-20 p-2">
          <div class="col-span-1"></div>
          <% actions.each do |action| %>
            <div class="col-span-2 justify-start mt-2"><%= action %></div>
          <% end %>
        </div>
      <% elsif actions.size > 1 %>
        <div class="grid grid-flow-col auto-cols-2 place-items-center xl:space-x-20 p-2">
          <% actions.each_with_index do |action, index| %>
            <div class="place-self-<%= index.even? ? "end" : "start" %> mt-2">
              <%= action %>
            </div>
          <% end %>
        </div>
    <% end %>
    </div>
  <% end %>
<% end %>
