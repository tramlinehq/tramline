<div class="py-1.5 <%= outer_classes %>">
  <div class="flex text-sm items-center justify-between space-x-2">
    <div class="flex flex-col gap-y-1">
      <div class="flex flex-row gap-x-1 items-center">
        <%= render IconComponent.new("git_commit_vertical.svg", size: :md) %>
        <%= render(ButtonComponent.new(scheme: :link,
                                       label: truncated_message,
                                       options: url,
                                       type: :link_external,
                                       size: :none,
                                       authz: false,
                                       html_options: {class: "inline-flex items-center text-main dark:bg-main dark:text-main-200 border-none shadow-none hover:underline"})) %>
      </div>
      <div class="flex flex-row gap-x-1.5 items-center">
        <% if show_avatar? %>
          <%= render ButtonComponent.new(scheme: :link,
                                         options: author_link,
                                         type: :link_external,
                                         size: :none,
                                         authz: false) do |button| %>
            <% button.with_icon(user_avatar(author_name, limit: 2, size: 24), raw_svg: true, size: :xl) %>
          <% end %>
        <% end %>

        <div class="text-xs text-neutral-500 dark:text-white">
          <span class="font-semibold">
            <%= render(ButtonComponent.new(scheme: :link,
                                           label: author_info,
                                           options: author_link,
                                           type: :link_external,
                                           size: :none,
                                           authz: false)) %>
          </span>
          committed <%= link_to_external short_sha, url, class: "font-mono underline" %> on <%= time_format(timestamp, with_time: true) %>
        </div>
      </div>
    </div>

    <% if detailed? %>
      <div class="flex flex-row gap-x-2 items-center">
        <div>
          <%= render BadgeComponent.new(kind: :badge) do |badge| %>
            <% badge.with_icon(vcs_provider_logo) %>
            <% badge.with_link(short_sha, url) %>
          <% end %>
        </div>

        <% if pull_request.present? %>
          <%= render BadgeComponent.new(kind: :badge) do |badge| %>
            <% badge.with_icon("git_pull_request.svg") %>
            <% badge.with_link("##{pull_request.number}", pull_request.url) %>
          <% end %>
        <% end %>

        <% if commit.backmerge_failure? %>
          <div data-controller="dialog">
            <button data-action="click->dialog#open" class="cursor-pointer border-none bg-transparent p-0">
              <%= status_badge("backmerge failed", :inert, classes: "hover:underline") %>
            </button>

            <dialog data-dialog-target="dialog" class="overflow-y-auto backdrop:bg-main-900/50 backdrop:dark:bg-main-900/80 box-padding rounded-lg shadow-lg shadow-main-500 dark:bg-main bg-white open:animate-fade-in w-full max-w-xl">
              <div class="flex flex-col gap-y-1">
                <div class="flex justify-between items-center border-b border-main-200 dark:border-main-600 py-2 px-4">
                  <div>
                    <h1 class="text-lg font-semibold text-main-900 dark:text-white">Cherry-Pick Commit to Working Branch</h1>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400 mt-1">Follow these steps to manually cherry-pick this commit</p>
                  </div>
                  <button class="text-main-600 dark:text-main-400 hover:text-main-900 dark:hover:text-white" data-action="dialog#close">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
                <div class="p-4">
                  <%= render BackmergeCherryPickInstructionsComponent.new(commit) %>
                </div>
              </div>
            </dialog>
          </div>
        <% end %>

        <% if teams_supported? && team.present? %>
          <%= render TeamPillComponent.new(team) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
