<% if boxed? %>
  <section class="card-default <%= section_margin %>">
    <%= content %>
  </section>
<% else %>
  <section class="<%= section_margin %>">
    <div class="flex <%= separator_gap %> items-center">
      <h1 class="<%= heading_size %> text-main dark:text-white">
        <%= title %>
      </h1>

      <div class="flex-1 h-full">
        <div class="h-px bg-main-200 dark:bg-main-600 w-full m-0"></div>
      </div>
    </div>

    <div class="flex justify-between">
      <% if subtitle.present? %>
        <span class="text-sm text-secondary dark:text-white">
          <%= subtitle %>
        </span>
      <% end %>

      <%= sidenote %>
    </div>

    <div class="<%= content_gap %>">
      <%= content %>
    </div>
  </section>
<% end %>
