<% component = V2::EnhancedTurboFrameComponent.new(frame, classes: "with-turbo-frame-loader h-full") %>
<% component.with_loading_indicator %>
<%= render component do %>
  <div class="w-full h-full box-padding border-default-t border-default-r border-default-b rounded-br-lg rounded-tr-lg shadow-default">
    <% if control_content %>
      <%= content %>
    <% else %>
      <h2 class="heading-2"><%= title %></h2>
      <% if subtitle.present? %>
        <div class="text-sm text-secondary"><%= subtitle %></div>
      <% end %>
      <article class="top-separator-space-default"><%= content %></article>
    <% end %>
  </div>
<% end %>
