<div class="border-l-8 pr-2 flex justify-between items-center <%= status_border %>">
  <div class="flex flex-col items-start gap-2 ml-4">
    <div class="flex flex-row items-center item-gap-default">
      <%= render V2::BadgeComponent.new(text: submission.deployment_channel_name, kind: :badge) do |badge| %>
        <% badge.with_icon(submission_logo) %>
      <% end %>

      <%= render V2::BadgeComponent.new(text: status, status: :neutral) %>
    </div>

    <%= render V2::HorizontalDataSetComponent.new do |component| %>
      <% component.with_data_set(title: "Released").with_content(released_ago) %>
      <% component.with_data_set(title: "External Status").with_content(external_status) %>
    <% end %>

    <%= render V2::ButtonComponent.new(label: "Dashboard â†—",
                                       scheme: :link,
                                       type: :link_external,
                                       options: submission.store_link,
                                       html_options: { class: "text-sm" },
                                       authz: false,
                                       size: :none) do |b|
      b.with_icon(submission_logo, size: :md)
    end %>
  </div>

  <div>
    <% if submission.triggerable? %>
      <%= render V2::ButtonComponent.new(label: "Start release",
                                         scheme: :default,
                                         type: :button,
                                         options: trigger_store_submission_path(submission),
                                         html_options: html_opts(:patch, "Are you sure?"),
                                         size: :xxs) %>
    <% end %>
  </div>
</div>
