<% if release.present? %>
  <%= render V2::SectionComponent.new(style: :boxed) do %>
    <div class="<%= striped_header %> -mx-2">
      <div class="flex items-center justify-between border-default-b px-3 py-2">
        <div class="flex items-center space-x-3 rtl:space-x-reverse">
          <% if release_version_drift? %>
            <div class="flex items-center space-x-1">
              <%= render V2::IconComponent.new("v2/android.svg", size: :lg) %>
              <%= release_version(android_release_version) %>
            </div>

            <div class="flex items-center">
              <%= render V2::IconComponent.new("v2/plus_fat.svg", size: :lg) %>
            </div>

            <div class="flex items-center space-x-1">
              <%= render V2::IconComponent.new("v2/ios.svg", size: :lg) %>
              <%= release_version(ios_release_version) %>
            </div>
          <% else %>
            <%= release_version(release.release_version) %>
          <% end %>

          <%= render V2::StatusIndicatorPillComponent.new(text: status.first, status: status.second) %>

          <% if hotfix_badge %>
            <%= render V2::BadgeComponent.new(hotfix_badge[:text]) do |badge| %>
              <% badge.with_icon(hotfix_badge[:icon]) %>
            <% end %>
          <% end %>
        </div>

        <div>
          <%= render V2::ButtonComponent.new(
            scheme: :supporting,
            label: "Go to release",
            options: release_path(release.id),
            size: :sm,
            html_options: { class: "-mr-2" },
            authz: false,
            type: :link) do |b|
            b.with_icon("v2/arrow_right.svg")
          end %>
        </div>
      </div>
    </div>

    <div class="flex justify-between items-start mt-2">
      <div class="flex justify-start">
        <div class="mt-2 flex gap-y-1 gap-x-2">
          <%= render V2::HorizontalDataSetComponent.new(separator: :solid, bg_color: true) do |component| %>
            <% component.with_data_set(title: "Started", lines: [start_time]).with_icon("v2/clock.svg") %>
            <% component.with_data_set(title: "Released", lines: [end_time]).with_icon("v2/zap.svg") %>
            <% component.with_data_set(title: "Duration", lines: [duration]).with_icon("v2/coffee.svg") %>
            <% component.with_data_set(title: "Release Pilot", lines: ["Jack Shephard"]).with_icon("v2/plane_takeoff.svg") %>
          <% end %>
        </div>
      </div>

      <div class="flex flex-row justify-end space-x-1">
        <% if release_branch.present? %>
          <%= render V2::ButtonComponent.new(label: release_branch,
                                             scheme: :link,
                                             type: :link_external,
                                             options: release.branch_url,
                                             authz: false,
                                             size: :xxs,
                                             arrow: :none) do |b|
            b.with_icon(vcs_icon, size: :sm)
          end %>
        <% end %>
        <% if release_tag.present? %>
          <%= render V2::ButtonComponent.new(label: release_tag,
                                             scheme: :link,
                                             type: :link_external,
                                             options: release.tag_url,
                                             authz: false,
                                             size: :xxs,
                                             arrow: :none) do |b|
            b.with_icon(vcs_icon, size: :sm)
          end %>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-2 justify-between mt-4 gap-x-6 gap-y-3">
      <% release.release_platform_runs.each do |run| %>
        <div class="grid gap-y-2 items-end">
          <% run.store_releases.each do |store_release| %>
            <%= render V2::BuildInfoComponent.new(store_release) %>
          <% end %>
        </div>
      <% end %>

      <% release.release_platform_runs.each do %>
        <div class="border-default box-padding">
          <%= render TimelineComponent.new(events: [{ title: "Success", description: "Staged release completed with 100.00%", timestamp: time_format(Time.current), type: :success },
                                                    { title: "Failed", description: "Hi2u", timestamp: time_format(Time.current), type: :error },
                                                    { title: "Success", description: "CI workflow Tramline Android Release Candidate triggered for build 16.69", timestamp: time_format(Time.current), type: :success },
                                                    { title: "Failed", description: "Hi2u", timestamp: time_format(Time.current), type: :error },
                                                    { title: "Failed", description: "Hi2u", timestamp: time_format(Time.current), type: :error }]) %>
        </div>
      <% end %>

      <% release.release_platform_runs.each do %>
        <div>
          <%= render V2::HorizontalDataSetComponent.new do |component| %>
            <% component.with_data_set(title: "Time in review phase", lines: ["about 10 days"]).with_icon("v2/clock.svg") %>
            <% component.with_data_set(title: "Time in release phase", lines: ["about 7 hours"]).with_icon("v2/clock.svg") %>
            <% component.with_data_set(title: "Commits", lines: [40]).with_icon("v2/clipboard_list.svg") %>
            <% component.with_data_set(title: "Review builds", lines: [10]).with_icon("v2/archive.svg") %>
          <% end %>
        </div>
      <% end %>

      <% release.release_platform_runs.each do |run| %>
        <div>
          <% if release.finished? %>
            <%= render V2::ReleaseMonitoringComponent.new(
              deployment_run: run.store_releases.last,
              metrics: [:stability, :adoption_rate, :staged_rollout],
              show_bundle_id: false,
              cols: 3,
              size: :sm) %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
