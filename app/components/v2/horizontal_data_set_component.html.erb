<div class="<%= bg_color %> border border-slate-200 border rounded-lg flex py-3 px-4 justify-items-stretch">
  <div class="space-x-4 flex">
    <% data_sets.each_with_index do |datum_set, i| %>
      <div class="space-y-2">
        <span class="text-xs font-semibold text-gray-600 <%= datum_set.uppercase_title %>">
          <%= datum_set.title %>
        </span>

        <div class="flex items-start space-x-2">
          <% if datum_set.icon? %>
            <span class="text-gray-500">
              <%= render datum_set.icon %>
            </span>
          <% end %>

          <div class="flex flex-col">
            <% datum_set.lines.each do |line| %>
              <span class="text-gray-500 font-normal text-sm">
                <%= line %>
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <% unless last_set?(i) %>
        <div class="<%= separator %>"></div>
      <% end %>
    <% end %>
  </div>
</div>
