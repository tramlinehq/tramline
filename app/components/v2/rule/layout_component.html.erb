<ol class="relative border-s border-dashed border-main-300 dark:border-main-700 ml-1">
  <%= render V2::Rule::PartComponent.new(condition_text: "if", condition_subtitle: "any of the following happens") do %>
    <%= if_statement %>
  <% end %>

  <% if when_statement %>
    <%= render V2::Rule::PartComponent.new(condition_text: "when", condition_subtitle: "all of these filters match") do %>
      <%= when_statement %>
    <% end %>
  <% end %>

  <%= render V2::Rule::PartComponent.new(condition_text: "then") do %>
    <%= render V2::BadgeComponent.new(text: "Release is unhealthy", status: :failure)  %>
  <% end %>
</ol>
