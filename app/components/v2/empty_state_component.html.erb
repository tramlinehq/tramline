<% if giant? %>
  <div class="flex justify-center <%= margin_top %>">
    <div class="flex flex-col justify-start mt-8">
      <h1 class="text-xl font-semibold text-main dark:text-white"><%= title %></h1>
      <div class="my-6 max-w-[200px] font-medium text-sm dark:text-main-300 text-secondary-50 mr-4">
        <%= text %>
      </div>

      <%= content %>
    </div>

    <%= image_tag(banner_image, width: 400, alt: "emptiness", class: "rounded-sm") %>
  </div>
<% elsif subdued? %>
  <div class="text-center px-4 <%= margin_top %> opacity-80">
    <%= render V2::IconComponent.new(banner_image, size: :xl) %>
    <h2 class="text-lg font-semibold text-main dark:text-white"><%= title %></h2>
    <div class="my-2 text-sm text-secondary">
      <%= text %>
    </div>
  </div>
<% elsif tiny? %>
  <div class="flex items-center justify-start gap-x-1">
    <%= render V2::IconComponent.new(banner_image, size: :md) %>
    <div class="text-xs text-secondary">
      <%= text %>
    </div>
  </div>
<% end %>
