<%= render V2::ButtonComponent.new(scheme: :light,
                                   options: path,
                                   type: :link,
                                   size: :xxs,
                                   html_options: { class: "-ml-0.5",
                                                   data: link_data }) do |b| %>
  <% b.with_tooltip("Go back", placement: "right") %>
  <% b.with_icon("v2/arrow_left.svg", size: :md) %>
<% end %>
