<%= content_tag(:div, reveal_data_attrs) do %>
  <%= button %>
  <div data-modal-reveal
       hidden
       aria-hidden="true">
    <div tabindex="-1"
         class="fixed inset-0 z-50 overflow-y-auto overflow-x-hidden flex items-center justify-center transform">
      <div class="relative w-full <%= max_width %> h-full md:h-auto">
        <div class="relative p-4 bg-white rounded-lg shadow dark:bg-main-800">
          <div class="flex justify-between items-center py-2 mb-5 rounded-t border-b dark:border-main-700">
            <h1 class="heading-3">
              <%= title %>
            </h1>
            <%= render V2::ButtonComponent.new(
              scheme: :naked_icon,
              type: :action,
              size: :none,
              authz: false,
              html_options: { class: "ms-auto inline-flex justify-center items-center", data: { action: "reveal#hide" } }) do |b|
              b.with_icon("close_icon")
            end %>
          </div>
          <%= body %>
        </div>
      </div>
    </div>
    <div class="bg-main-900/50 dark:bg-main-900/80 fixed inset-0 z-40"></div>
  </div>
<% end %>
