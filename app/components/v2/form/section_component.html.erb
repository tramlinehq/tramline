<section <%= data_fields %>
         <% "hidden" if hidden? %>>
  <div class="grid grid-cols-3 items-center xl:space-x-20 space-y-8 xl:space-y-0">
    <div class="col-span-1">
      <% if heading.present? %>
        <h3 class="mb-2 font-semibold leading-none text-gray-900 dark:text-white"><%= heading %></h3>
      <% end %>
      <p class="text-sm font-light text-gray-500 sm:mb-5 dark:text-gray-400">
        <%= description %>
      </p>
    </div>
    <div class="col-span-2 border border-l rounded-lg bg-white dark:bg-gray-700 border-gray-200 dark:border-gray-600 p-4">
      <%= content %>
    </div>
  </div>
</section>
