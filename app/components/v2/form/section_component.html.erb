<section <%= data_fields %> <% "hidden" if hidden? %>>
  <div class="grid grid-cols-3 items-start xl:space-x-20 space-y-8 xl:space-y-0">
    <div class="col-span-1 whitespace-normal">
      <% if heading.present? %>
        <h3 class="mt-1.5 mb-2 font-semibold leading-none text-gray-900 dark:text-white"><%= heading %></h3>
      <% end %>
      <div class="text-sm font-light text-gray-500 dark:text-gray-400">
        <%= description %>
      </div>
    </div>

    <div class="col-span-2 grid gap-y-4 border border-l rounded-lg bg-white dark:bg-gray-700 border-gray-200 dark:border-gray-600 p-4">
      <%= content %>
    </div>
  </div>
</section>
