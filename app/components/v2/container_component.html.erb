<div class="mb-1 flex justify-between">
  <div class="flex flex-row justify-between items-center">
    <div>
      <div class="flex items-center">
        <h1 class="text-2xl font-semibold text-neutral-800 dark:text-white">
          <span><%= title %></span>
        </h1>

        <nav class="flex flex-row flex-wrap items-center space-x-3 ml-3">
          <% side_actions.each do |side_action| %>
            <%= side_action %>
          <% end %>
        </nav>
      </div>

      <% if subtitle %>
        <span class="mt-1 text-sm">
          <%= subtitle %>
        </span>
      <% end %>
    </div>
  </div>

  <nav class="md:mt-0 flex flex-wrap gap-2 shrink-0">
    <% actions.each do |action| %>
      <%= action %>
    <% end %>
  </nav>
</div>

<nav class="-mx-1.5 flex flex-row flex-wrap mt-10 sm:space-x-1">
  <% sub_actions.each do |sub_action| %>
    <%= sub_action %>
  <% end %>
</nav>

<% if empty_state? %>
  <section class="mt-4">
    <%= empty_state %>
  </section>
<% else %>
  <section class="mt-2">
    <%= body %>
  </section>
<% end %>
