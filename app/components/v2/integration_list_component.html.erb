<% @integrations_by_categories.each do |category, integrations| %>
  <%= render V2::SectionComponent.new(style: :titled,
                                      title: Integration.human_enum_name(:category, category),
                                      subtitle: Integration::CATEGORY_DESCRIPTIONS[category.to_sym].downcase) do %>
    <div id="<%= category %>">
      <div class="grid grid-cols-12 gap-6 mt-4">
        <% integrations.each do |integration| %>
          <%= render V2::IntegrationCardComponent.new(@app, integration, category) %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

