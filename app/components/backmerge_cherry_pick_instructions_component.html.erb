<div class="flex flex-col gap-y-4 py-1">
  <!-- Intro -->
  <div class="text-sm text-neutral-700 dark:text-neutral-300">
    <p>The automatic backmerge failed for this commit. You'll need to manually cherry-pick it to your working branch to keep your changes in sync.</p>
  </div>

  <!-- Commands -->
  <div class="space-y-4">
    <% commands_with_descriptions.each_with_index do |(command, description), index| %>
      <div class="flex gap-3 items-start">
        <div class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-100 dark:bg-primary-900 flex items-center justify-center mt-0.5">
          <span class="text-xs font-semibold text-primary-600 dark:text-primary-400"><%= index + 1 %></span>
        </div>
        <div class="flex-1 space-y-1.5">
          <p class="text-xs leading-6 text-neutral-600 dark:text-neutral-400"><%= description %></p>
          <%= render SmartTextBoxComponent.new(
                command,
                clipboard: true,
                clipboard_tooltip: "Copy command",
                size: :compact
              ) %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Conflict Note -->
  <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded p-3 text-xs text-amber-700 dark:text-amber-400">
    <strong>Note:</strong> If cherry-pick fails due to conflicts, resolve them manually and run <code class="font-mono">git cherry-pick --continue</code> after staging your changes.
  </div>
</div>
