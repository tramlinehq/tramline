<div class="flex flex-col gap-y-4 py-4">
  <!-- Commit Details -->
  <div class="bg-neutral-50 dark:bg-neutral-900 p-3 rounded border border-neutral-200 dark:border-neutral-700">
    <div class="text-sm space-y-1">
      <div>
        <span class="font-semibold text-neutral-700 dark:text-neutral-300">Commit:</span>
        <code class="ml-2 font-mono text-neutral-900 dark:text-neutral-100"><%= short_sha %></code>
      </div>
      <div>
        <span class="font-semibold text-neutral-700 dark:text-neutral-300">Release Branch:</span>
        <code class="ml-2 font-mono text-neutral-900 dark:text-neutral-100"><%= release_branch %></code>
      </div>
      <div>
        <span class="font-semibold text-neutral-700 dark:text-neutral-300">Target Branch:</span>
        <code class="ml-2 font-mono text-neutral-900 dark:text-neutral-100"><%= working_branch %></code>
      </div>
    </div>
  </div>

  <!-- Commands -->
  <div class="space-y-3">
    <% commands.each_with_index do |command, index| %>
      <div class="flex gap-3">
        <div class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-100 dark:bg-primary-900 flex items-center justify-center">
          <span class="text-xs font-semibold text-primary-600 dark:text-primary-400"><%= index + 1 %></span>
        </div>
        <div class="flex-1">
          <%= render SmartTextBoxComponent.new(
                command,
            clipboard: true,
            clipboard_tooltip: "Copy command",
            size: :compact
              ) %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Conflict Note -->
  <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded p-3 text-xs text-amber-700 dark:text-amber-400">
    <strong>Note:</strong> If cherry-pick fails due to conflicts, resolve them manually and run <code class="font-mono">git cherry-pick --continue</code> after staging your changes.
  </div>
</div>
