<%= render Onboarding::WizardComponent.new(
      app: @app,
      onboarding_state: @onboarding_state,
      show_back_button: true,
      show_next_button: true
    ) do %>
  <% if @onboarding_state.vcs_provider_completed? %>
    <%# render the next form only if the step is not completed %>
    <%= render IntegrationCardComponent.new(@app, Integration.by_categories_for(@app)["version_control"].find { _1.providable_type == @onboarding_state.vcs_provider.titleize + "Integration" }, "version_control") %>
  <% else %>
    <%# otherwise, render a notice to direct the user to the previous step %>
    <div class="p-4 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg" role="alert">
      <span class="font-medium">Notice:</span> Please select a version control provider in the previous step to proceed.
    </div>
  <% end %>
<% end %>
