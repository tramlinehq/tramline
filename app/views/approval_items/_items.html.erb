<%= render V2::TableComponent.new(columns: ["", ""]) do |table| %>
  <% approval_items.each do |item| %>
    <% table.with_row do |row| %>
      <% row.with_cell do %>
        <%= render partial: "item_content", locals: {item:} %>
      <% end %>

      <% row.with_cell(wrap: true) do %>
        <%= render partial: "item_select", locals: {item:} %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
