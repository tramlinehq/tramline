<%= render EnhancedTurboFrameComponent.new(:monitoring_config) do %>
  <% if @monitoring_projects.present? %>
    <%= render FormComponent.new(model: [@app, @sentry_integration], url: app_monitoring_sentry_config_path(@app), method: :patch) do |f| %>
      <% if @app.sentry_connected? %>
        <% if @app.ios? || @app.cross_platform? %>
          <%= render partial: "monitoring/sentry_project_form",
                     locals: {
                       form: f,
                       platform: "iOS",
                       projects: @monitoring_projects,
                       project: @sentry_integration.ios_project,
                       org_slug: @sentry_integration.ios_config&.dig("organization_slug"),
                       environment: @sentry_integration.ios_environment
                     } %>
        <% end %>

        <% if @app.android? || @app.cross_platform? %>
          <%= render partial: "monitoring/sentry_project_form",
                     locals: {
                       form: f,
                       platform: "Android",
                       projects: @monitoring_projects,
                       project: @sentry_integration.android_project,
                       org_slug: @sentry_integration.android_config&.dig("organization_slug"),
                       environment: @sentry_integration.android_environment
                     } %>
        <% end %>
      <% end %>

      <% f.with_action do %>
        <%= f.F.authz_submit "Update", "plus.svg", size: :xs %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
