<%= render V2::TabbedContainerComponent.new(title: @train.name,
                                            turbo_frame: dom_id(@train, :edit_train),
                                            tab_config: @tab_configuration,
                                            error_resource: @release_platform) do |container| %>
  <% container.with_back_button(to: "the train", path: app_train_releases_path(@app, @train)) %>
  <% container.with_tab do %>
    <% if @edit_not_allowed %>
      <%= render V2::AlertComponent.new(kind: :banner, type: :notice, title: "Updates will be applied on a new release", full_screen: false) do %>
        The submissions settings can be edited while there are active releases. But they will only be applied on the next release.
      <% end %>
    <% end %>

    <% content_for :error_resource do %>
      <%= render V2::ErrorComponent.new(@config) %>
    <% end %>

    <%= render "form",
               app: @app,
               train: @train,
               platform_label: @platform_label,
               platform_name: @platform.platform,
               platform: @platform,
               platform_config: @config,
               ci_actions: @ci_actions,
               submission_types: @submission_types %>
  <% end %>
<% end %>
