<%= render V2::TabbedContainerComponent.new(title: @train.name,
                                            turbo_frame: dom_id(@train, :edit_train),
                                            tab_config: @tab_configuration,
                                            error_resource: @train) do |container| %>
  <% container.with_back_button(to: "the train", path: app_train_releases_path(@app, @train)) %>
  <% container.with_tab do %>
    <%= render "form", app: @app, train: @train, release_platform: @release_platform, selected_config: @selected_config, other_config: @other_config,ci_actions: @ci_actions, submission_types: @submission_types %>
  <% end %>
<% end %>
