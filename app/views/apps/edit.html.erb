<% breadcrumb :app, @app %>

<%= form_with(model: [@app],
              url: app_path(@app),
              method: :patch) do |form| %>

  <%= render partial: "shared/errors", locals: { resource: @app } %>

  <div class="mb-8">
    <h1 class="text-2xl md:text-3xl text-slate-800 font-bold">Settings: <%= @app.name %> ⚙️</h1>
  </div>

  <div class="border-t my-8"></div>

  <div class="grid gap-5 md:grid-cols-2">
    <div>
      <%= form.label :name, class: "block text-sm font-medium mb-1" %>
      <%= form.text_field :name, class: "form-input w-full", placeholder: "Enter app name...", required: true %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium mb-1" %>
      <%= form.text_area :description, class: "form-input w-full", placeholder: "Describe your app..." %>
    </div>

    <div>
      <%= form.label :bundle_identifier, class: "block text-sm font-medium mb-1" %>
      <%= form.text_field :bundle_identifier, class: "form-input w-full", placeholder: "eg., com.clj.is.best", required: true %>
      <div class="text-sm mt-2">If you're going to deploy to the App Store or Play Store, this <strong>must</strong> match the
        identifier in the store listing.
      </div>
    </div>

    <div>
      <%= form.label :build_number, class: "block text-sm font-medium mb-1" %>
      <%= form.number_field :build_number, class: "form-input w-full", placeholder: "eg., your last versionCode", required: true %>
    </div>
  </div>

  <div class="mt-5">
    <%= form.submit 'Update', class: "btn bg-indigo-500 hover:bg-indigo-600 text-white" do %>
      <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
        <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z"/>
      </svg>
    <% end %>
  </div>
<% end %>
