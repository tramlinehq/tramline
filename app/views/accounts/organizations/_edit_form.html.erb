<%= render V2::SectionComponent.new(style: :titled, title: "API", subtitle: "Use these credentials to make API calls to Tramline") do %>
  <div class="flex flex-col gap-y-6">
    <div data-controller="clipboard" data-clipboard-success-content-value="copied!">
      <div class="relative w-1/3">
        <label class="<%= EnhancedFormHelper::AuthzForm::LABEL_CLASSES %>" for="account_id">Account ID</label>
        <input type="text"
               id="account_id"
               readonly
               value="<%= @organization.id %>"
               data-clipboard-target="source"
               class="<%= EnhancedFormHelper::AuthzForm::TEXT_FIELD_CLASSES %>"/>
        <%= copy_to_clipboard_button("button", styles: "mr-3") %>
      </div>
    </div>

    <div data-controller="password-visibility clipboard" data-clipboard-success-content-value="copied!">
      <div class="relative w-1/3">
        <label class="<%= EnhancedFormHelper::AuthzForm::LABEL_CLASSES %>" for="api_key">API Key</label>
        <input type="password"
               id="api_key"
               readonly
               value="<%= @organization.api_key %>"
               data-clipboard-target="source"
               data-password-visibility-target="input"
               class="<%= EnhancedFormHelper::AuthzForm::TEXT_FIELD_CLASSES %>"/>
        <%= password_toggle_button(styles: "mr-3") %>
        <%= copy_to_clipboard_button("button", styles: "mr-10") %>
      </div>
    </div>
  </div>
<% end %>
