<div class="sm:flex sm:justify-between sm:items-center mb-8">
  <!-- Left: Title -->
  <div class="mb-4 sm:mb-0">
    <h1 class="text-2xl md:text-3xl text-slate-800 font-bold"> üöù <%= @train.name.titleize %></h1>
    <h2> <%= @current_release.branch_name %> </h2>
  </div>

  <!-- Right: Actions -->
  <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">

    <%= link_to edit_accounts_organization_app_releases_train_path(current_organization, @app, @train) do%>
      <button class="btn bg-indigo-500 hover:bg-indigo-600 text-white mt-5"> Modify </button>
    <% end %>
  </div>
</div>

<div class="flex">
  <% @train.steps.each do |step| %>
    <div class="outline grow text-center h-12	">
      <%= step.name %>
    </div>
  <% end %>  
</div>


<% @current_release.commits.each do |commit| %>
  <div class="">
    <%= commit.message %>
  </div>
<% end %>
