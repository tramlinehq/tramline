<%# locals: (form:, filter: nil, index:) %>

<div class="flex items-center gap-2 p-3 border border-gray-200 rounded-md">
  <%= form.fields_for :linear_config do |sf| %>
    <%= sf.fields_for :release_filters, index: index do |rf| %>
      <div class="flex items-center gap-2 flex-1">
        <%= rf.select :type,
              options_for_select([
                ["Label", "label"],
                ["State", "state"]
              ], filter&.dig("type")),
              {prompt: "Select filter type"},
              {class: "form-select text-sm"} %>

        <%= rf.text_field :value,
              value: filter&.dig("value"),
              placeholder: "Filter value",
              class: "form-input text-sm flex-1" %>
      </div>

      <%= render ButtonComponent.new(
        scheme: :naked_icon,
        type: :action,
        size: :none,
        html_options: {data: {action: "nested-form-ext#remove"}}
      ) do |b|
        b.with_icon("trash.svg", size: :md)
      end %>
    <% end %>
  <% end %>
</div>
