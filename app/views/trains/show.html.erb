<% breadcrumb :train, @train %>
<div class="sm:flex sm:justify-between sm:items-center pb-8 border-b border-slate-200">
  <!-- Left: Title -->
  <div class="mb-4 sm:mb-0">
    <p class="text-2xl md:text-3xl text-slate-800 font-bold"><%= @train.name.titleize %> ðŸš¦</p>
  </div>

  <!-- Right: Actions -->
  <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">

    <% if @train.active_run %>
      <%= link_to live_release_app_train_releases_path(@app, @train) do %>
        <button class="btn bg-green-500 hover:bg-green-600 text-white">Ongoing release</button>
      <% end %>
    <% else %>
      <%= button_to app_train_releases_path(@app, @train) do %>
        <button class="btn bg-indigo-500 hover:bg-indigo-600 text-white">Start new release</button>
      <% end %>
    <% end %>

    <%= link_to edit_app_train_path(@app, @train) do %>
      <button class="btn border-slate-200 hover:border-slate-300 text-slate-600">
        <svg class="w-4 h-4 fill-current text-slate-500 shrink-0" viewBox="0 0 16 16">
          <path d="M11.7.3c-.4-.4-1-.4-1.4 0l-10 10c-.2.2-.3.4-.3.7v4c0 .6.4 1 1 1h4c.3 0 .5-.1.7-.3l10-10c.4-.4.4-1 0-1.4l-4-4zM4.6 14H2v-2.6l6-6L10.6 8l-6 6zM12 6.6L9.4 4 11 2.4 13.6 5 12 6.6z"></path>
        </svg>
        <span class="ml-2">Settings</span>
      </button>
    <% end %>

  </div>
</div>

<div class="flex mt-8">
  <div class="basis-1/2">
    <span class="font-bold">Branching strategy: </span> <%= @train.branching_strategy_name %>
    <% unless @train.sign_off_groups.blank? %>
      <br/>
      <span class="font-bold">Sign-off groups: </span> <%= @train.sign_off_groups.map(&:name).join(", ") %>
    <% end %>
  </div>

  <div class="basis-1/2 text-slate-400 italic">
    <%= @train.description %>
  </div>
</div>

<!--Steps-->

<h2 class="text-2xl font-bold mt-8 mb-4">Steps</h2>

<div class="flex flex-col">
  <ul>
    <% @train.steps.each do |step| %>
      <li class="relative py-2">
        <div class="flex items-center">
          <% unless step.last? %>
            <div class="absolute left-0 h-full w-0.5 bg-slate-200 self-start ml-2.5 -translate-x-1/2 translate-y-3" aria-hidden="true"></div>
          <% end %>
          <div class="absolute left-0 rounded-full bg-slate-200 border border-indigo-200" aria-hidden="true">
            <svg class="w-5 h-5 fill-current text-slate-500" viewBox="0 0 20 20">
            </svg>
          </div>
          <h3 class="text-lg font-bold text-slate-800 pl-9"><%= step.name %></h3>
        </div>
        <div class="pl-9">
          <span class="text-slate-400"><%= step.description %></span>
          <br/>
          Github / <%= step.ci_cd_channel&.values&.first %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<!--Releases-->

<h2 class="text-2xl font-bold mt-8 mb-4">Releases</h2>
<% releases_count = @train.runs.size %>
<% @train.runs.order(was_run_at: :desc).each_with_index do |run, index| %>
  <div class="grid grid-cols-12 ">
    <div>
      <%= releases_count - index %>
    </div>
    <% if run.completed_at %>
      <div class="col-span-4">
        <%= "#{run.release_version} released on #{run.completed_at.to_s(:short)}" %>
      </div>
    <% else %>
      <div class="col-span-4">
        <%= "#{run.release_version} ? " %>
      </div>
    <% end %>

    <div class="col-span-4">
      <%= link_to run.branch_name, release_path(run.id) %>
    </div>
    <div>
      Slack
    </div>
  </div>
<% end %>
