<div class="flex flex-col">
  <div class="text-slate-500 text-sm"><%= simple_format(step.description) %></div>

  <div class="text-xs text-slate-500 font-medium align-text-bottom mt-5 mb-3">
    <%= image_tag("workflow.svg", width: 16, class: "inline-flex mr-2") %>
    <%= render partial: "shared/display_channels",
               locals: { name: show_ci_cd_provider(step), channel: show_ci_cd_channel(step) } %>
  </div>

  <%= render partial: "shared/deployments", locals: { step: step, show_deployment_status: false } %>
</div>
