<div class="border-default box-padding bg-white dark:bg-backgroundDark">
  <div class="flex flex-col h-full space-y-2">
    <header class="flex justify-between">
      <div class="flex items-center space-x-2">
        <%= image_tag("integrations/logo_svix.svg", width: 24, height: 24) %>
        <h4 class="heading-4">Powered by Svix</h4>
      </div>

      <% if train.webhooks_available? %>
        <%= render ButtonComponent
              .new(scheme: :supporting,
                   label: "Go to portal ↗",
                   options: portal_app_train_outgoing_webhooks_path(app, train),
                   size: :sm,
                   html_options: {class: "-mr-2"},
                   authz: false,
                   type: :link_external) %>
      <% end %>
    </header>

    <% unless train.webhooks_available? %>
      <footer>
        <div class="text-xs text-slate-500">
          We've partnered with <%= link_to_external "Svix", "https://www.svix.com", class: "underline" %> to bring
          webhooks to Tramline. Setup is in progress—save this form and return later to access your unique portal and
          configure endpoints.
        </div>
      </footer>
    <% end %>
  </div>
</div>
