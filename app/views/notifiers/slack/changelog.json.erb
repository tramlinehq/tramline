{
  "blocks": [
    <% if @header.present? %>
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*<%= @header %>*"
      }
    },
    <% end %>
    {
      "type": "rich_text",
      "elements": [
        {
          "type": "rich_text_list",
          "style": "bullet",
          "elements": [
            <% changes.each_with_index do |change, i| %>
            <%= i.zero? ? "" : "," %>
            {
              "type": "rich_text_section",
              "elements": [
                {
                  "type": "text",
                  "text": "<%= safe_string(change) %>"
                }
              ]
            }
            <% end %>
          ]
        }
      ]
    }
  ]
}
