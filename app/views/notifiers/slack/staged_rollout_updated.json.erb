{
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "<%= main_text %>"
      }
    }
    <% if secondary_text.present? %>
    ,{
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "<%= secondary_text %>"
      }
    }
    <% end %>
    <% if @is_play_store_production %>
    ,{
      "type": "context",
      "elements": [
        {
          "type": "plain_text",
          "text": "<%= google_managed_publishing_text %>",
          "emoji": false
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "plain_text",
          "text": "<%= google_unmanaged_publishing_text %>",
          "emoji": false
        }
      ]
    }
    <% end %>
  ]
}
