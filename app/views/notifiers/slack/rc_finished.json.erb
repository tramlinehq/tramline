{
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": ":sparkles: *New RC deployed for <%= @release_version %> (<%= @build_number %>)*"
      }
    }
    <% @submissions.each do |submission| %>,
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "<%= submission_text(submission) %>"
      }
    }
    <% end %>
    <% if @changes_since_last_run.present? %>,
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": ":pushpin: *Changes since last RC*"
      }
    },
    {
      "type": "rich_text",
      "elements": [
        {
          "type": "rich_text_list",
          "style": "bullet",
          "elements": [
            <% changes_in_main_message(@changes_since_last_run) do |change, i| %>
            <%= i.zero? ? "" : "," %>
            {
              "type": "rich_text_section",
              "elements": [
                {
                  "type": "text",
                  "text": "<%= safe_string(change) %>"
                }
              ]
            }
            <% end %>
          ]
        }
      ]
    }
    <% if changes_spillover?(@changes_since_last_run) %>,
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "RC changelog continued in thread :thread:"
        }
      ]
    }
    <% end %>
    ,
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Full release changelog in :thread:"
        }
      ]
    }
    <% elsif @changes_since_last_release.present? %>,
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": ":pushpin: *Changes since last release*"
      }
    },
    {
      "type": "rich_text",
      "elements": [
        {
          "type": "rich_text_list",
          "style": "bullet",
          "elements": [
            <% changes_in_main_message(@changes_since_last_release) do |change, i| %>
            <%= i.zero? ? "" : "," %>
            {
              "type": "rich_text_section",
              "elements": [
                {
                  "type": "text",
                  "text": "<%= safe_string(change) %>"
                }
              ]
            }
            <% end %>
          ]
        }
      ]
    }
    <% if changes_spillover?(@changes_since_last_release) %>,
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Changelog continued in thread :thread:"
        }
      ]
    }
    <% end %>
    <% end %>
  ]
}
