{
  "blocks": [
    {
      "type": "context",
      "elements": [
        {
          "type": "image",
          "image_url": "<%= @platform_public_img %>",
          "alt_text": "app"
        },
        {
          "type": "mrkdwn",
          "text": "*<%= @app_name %> (<%= @app_platform %>)* <%= @train_current_version %>"
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*New release <%= @train_current_version %>* will be kicked off at *<%= @release_scheduled_at %>*! :hourglass:"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "image",
          "image_url": "https://storage.googleapis.com/tramline-public-assets/tramline-small.png",
          "alt_text": "tramline"
        },
        {
          "type": "mrkdwn",
          "text": "<<%= @train_url %>|Manage release>"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "plain_text",
          "text": "Release train: <%= @train_name %>",
          "emoji": true
        }
      ]
    },
    {
      "type": "divider"
    }
  ]
}
