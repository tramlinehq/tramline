<div class="max-w-md mx-auto px-4 py-8">
  <%= render partial: "authentication/email/shared/header", locals: { heading: "Accept your invitation! âœ¨", resource: nil, subtitle_text: "Team - #{@organization.name}" } %>
  <!-- Form -->
  <% if @acceptable %>
    <%= form_with(url: authentication_invite_confirmations_path, method: :post, html: { 'data-turbo' => "false" }) do |f| %>

      <% if @token.present? %>
        <%= hidden_field_tag :invite_token, @token %>
      <% end %>

      <div class="flex items-center justify-between mt-6">
        <%= f.submit "Yes, please", class: "btn bg-indigo-500 hover:bg-indigo-600 text-white" %>
      </div>
    <% end %>
  <% else %>
    <%= link_to "Sign out", destroy_email_authentication_session_path, "data-turbo": false, class: "btn bg-indigo-500 hover:bg-indigo-600 text-white" %>
  <% end %>
</div>
