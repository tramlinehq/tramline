<% if is_disconnectable_category %>
  <%= render ButtonComponent.new(
        scheme: :danger,
        options: app_integration_path(@app, integration),
        type: :button,
        size: :xxs,
        disabled: !is_disconnectable,
        html_options: {method: :delete, data: {turbo_confirm: "Are you sure you want to disconnect this integration?"}}
      ) do |b|
        b.with_icon("trash.svg", size: :sm)
      end %>
<% end %>
