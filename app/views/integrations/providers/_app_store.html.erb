<%= render V2::FormComponent.new(model: [app, integration], url: app_appstore_integration_path(app)) do |f| %>
  <% f.with_section(heading: "Add") do |section| %>
    <% section.with_description do %>
      <p>Your API key for App Store Connect API</p>
      <p class="mt-2 text-xs">
        <%= link_to_external "How to create an API key for App Store Connect API?",
                             "https://developer.apple.com/documentation/appstoreconnectapi/creating_api_keys_for_app_store_connect_api",
                             class: "underline" %>
      </p>
    <% end %>

    <%= section.F.hidden_field :category, value: category %>

    <% section.F.fields_for :providable do |subf| %>
      <%= subf.hidden_field :type, value: integration.providable_type %>
      <div><%= subf.labeled_text_field :key_id, "Key ID" %></div>
      <div><%= subf.labeled_text_field :issuer_id, "Issuer ID" %></div>
      <div><%= subf.labeled_file_field :p8_key_file, "Upload key file", "Only .p8 files.", accept: ".p8" %></div>
    <% end %>
  <% end %>

  <% f.with_action do %>
    <div class="flex items-center" data-controller="reveal">
      <%= f.F.authz_submit "Create", "plus.svg", size: :xs, html_options: { data: { action: "reveal#toggle" } } %>
      <div class="ml-5">
        <div hidden data-reveal>
          <%= render V2::LoadingIndicatorComponent.new(text: "Verifying...") %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
