<% form_url = app_bitrise_integration_path(@app) %>

<span data-controller="visibility">
    <button class="btn border-slate-300 hover:border-slate-400 flex items-center"
            data-turbo="false"
            data-action="visibility#toggle">
      Connect
    </button>

  <%= modal_for("Add Access Token") do %>
      <div class="flex flex-col space-y-2">
        <div class="flex">
          <%= form_with(model: [@app, integration], url: form_url) do |form| %>
              <%= form.hidden_field :category, value: category %>
            <%= form.fields_for :providable do |subform| %>
                <%= subform.hidden_field :type, value: integration.providable_type %>
              <%= subform.text_field :access_token %>
              <% end %>
            </div>

            <div class="flex self-end">
          <%= form.submit 'Create', class: "btn bg-indigo-500 hover:bg-indigo-600 flex text-white items-center" %>
        </div>

          <% end %>
          </div>
  <% end %>
</span>
