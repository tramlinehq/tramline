<% provider = integration.providable %>

<div class="col-span-full xl:col-span-3 2xl:col-span-4 bg-white shadow-md rounded-sm border border-slate-200">
  <div class="flex flex-col h-full p-5">
    <div class="grow">
      <header class="flex items-center mb-4">
        <div class="w-30 h-30 shrink-0 mr-3">
          <%= image_tag("integrations/logo_#{provider.to_s}.png", width: 35, height: 35) %>
        </div>
        <h3 class="text-lg text-slate-800 font-semibold">
          <%= provider.display %>
        </h3>
      </header>
    </div>

    <footer class="mt-1">
      <div class="flex flex-wrap justify-between items-center">
        <div class="flex space-x-3">
          <div class="flex items-center text-slate-400">
            <div class="text-sm text-slate-500">
              <% if integration.connected? %>
                <div class="text-xs inline-flex font-medium uppercase tracking-wide bg-green-100 text-green-600 rounded-full text-center px-2.5 py-1">
                  Connected
                </div>
              <% end %>

              <% if integration.disconnected? %>
                <% if integration.providable.to_s == "google_play_store" %>
                  <%= render partial: "integrations/providers/google_play_store",
                             locals: { current_organization: current_organization,
                                       integration: integration,
                                       category: category
                             } %>
                <% end %>

                <% if integration.providable.to_s == "testflight" %>
                  <%= render partial: "integrations/providers/app_store",
                             locals: { current_organization: current_organization,
                                       integration: integration,
                                       category: category
                             } %>
                <% end %>

                <% if integration.providable.to_s == "bitrise" %>
                  <%= render partial: "integrations/providers/bitrise",
                             locals: { current_organization: current_organization,
                                       integration: integration,
                                       category: category
                             } %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </div>
</div>
