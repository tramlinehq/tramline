<%= render EnhancedTurboFrameComponent.new("bugsnag_config") do %>
  <% if @monitoring_projects.present? %>
    <%= render FormComponent.new(model: [@app, @integration], url: app_bugsnag_config_path(@app), method: :patch) do |f| %>
      <% if @app.bugsnag_connected? %>
        <% if @app.ios? || @app.cross_platform? %>
          <%= render partial: "bugsnag/configs/project_form",
                     locals: {
                       form: f,
                       platform: "iOS",
                       projects: @monitoring_projects,
                       project: @integration.ios_config&.fetch("project_id", nil),
                       stage: @integration.ios_config&.fetch("release_stage", nil)
                     } %>
        <% end %>

        <% if @app.android? || @app.cross_platform? %>
          <%= render partial: "bugsnag/configs/project_form",
                     locals: {
                       form: f,
                       platform: "Android",
                       projects: @monitoring_projects,
                       project: @integration.android_config&.fetch("project_id", nil),
                       stage: @integration.android_config&.fetch("release_stage", nil)
                     } %>
        <% end %>
      <% end %>

      <% f.with_action do %>
        <%= f.F.authz_submit "Update", "plus.svg", size: :xs %>
      <% end %>
    <% end %>
  <% end %>
<% end %>