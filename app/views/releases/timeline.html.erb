<% breadcrumb :release, @release %>

<div class="sm:flex sm:justify-between sm:items-center pb-8 border-b border-slate-200">
  <p class="text-2xl md:text-3xl text-slate-800 font-bold">Event Log</p>
</div>

<section>
  <ul class="mt-6">
    <% @events.each do |passport| %>
      <li class="flex px-2">
        <div class="grow flex items-center border-b border-slate-100 text-sm py-2">
          <div class="grow flex justify-between">

            <div class="self-center">
              <%= passport.message %>
            </div>

            <div class="shrink-0 self-end ml-2">
              <span class="font-medium text-indigo-500 hover:text-indigo-600">
                <%= passport.created_at.strftime("%I:%M:%S –– %d/Sept/%y") %>
              </span>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</section>
