<%= render V2::LiveRelease::ContainerComponent.new(@release,
                                                   title: @train.name,
                                                   turbo_frame: dom_id(@release, :live_release),
                                                   tab_config: @tab_configuration) do |container| %>
  <% container.with_back_button %>
  <% container.with_tab(title: "Regression Testing", icon: @tab_configuration.dig(:stability, :regression_testing, :icon)) do %>
    <%= render V2::PlatformViewComponent.new(@release) do |component| %>
      <% component.platform_runs.each do |run| %>
        <div class="grid grid-cols-1">
          <%= render V2::LiveRelease::RegressionTestingComponent.new(run) %>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
