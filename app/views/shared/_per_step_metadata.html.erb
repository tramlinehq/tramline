<div>
  <div class="px-4 py-2 bg-<%= step_color step.kind %>-50 rounded-md border-2 border-<%= step_color step.kind %>-300">
    <div class="flex justify-between">
      <div class="flex items-center">
        <h3 class="text-lg font-bold text-slate-800"><%= step.name %></h3>
        <%= status_badge "##{step.step_number}", %w[bg-slate-200 text-slate-600 text-xs ml-2] %>
        <%= status_badge step.kind&.humanize, %w[bg-slate-200 text-slate-600 text-xs ml-2] %>
      </div>

      <% if editable %>
        <%= render partial: "trains/edit_step_button", locals: { editable: editable, step: step } %>
      <% end %>

      <% if release.present? %>
        <%= render partial: "releases/live_release/step_run_status", locals: { step_run: step_run, step: step } %>
      <% end %>
    </div>

    <div class="flex flex-col pt-1">
      <div class="text-slate-500 text-sm"><%= simple_format(step.description) %></div>

      <% if step_run&.build_version %>
        <div class="flex items-center mt-4">
          <span class="font-medium mr-2">
            <%= step_run.build_version %>&nbsp;(<%= step_run.build_number %>)
          </span>
        </div>
      <% end %>

      <div class="text-xs align-text-bottom mt-4 mb-1">
        <%= image_tag("workflow.svg", width: 16, class: "inline-flex mr-2") %>
        <%= render partial: "shared/display_channels",
                   locals: { name: show_ci_cd_provider(step),
                             provider_name: step.train.ci_cd_provider.to_s,
                             channel: show_ci_cd_channel(step) } %>
      </div>

      <div class="ml-7">
        <%= render partial: "shared/deployments", locals: { step: step, step_run: step_run, release: release, show_deployment_status: true } %>
      </div>
    </div>
  </div>
</div>
