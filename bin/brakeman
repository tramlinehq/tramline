#!/usr/bin/env bash
set -o errexit

# Check if brakeman gem is installed
if ! gem list brakeman -i &>/dev/null; then
  echo "Error: brakeman gem is not installed. Please install it using 'gem install brakeman'."
  exit 1
fi

# Add --ensure-latest to the beginning of the arguments
set -- --ensure-latest "$@"

# Run brakeman with the provided arguments
bundle exec brakeman "$@"
